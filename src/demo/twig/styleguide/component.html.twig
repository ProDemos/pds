{% extends ['base.html.twig'] %}
{% import 'macros/components.html.twig' as ui %}


{% block head_title -%}
    {{- parent() -}}
    {%- if name|default %} - {{ name|capitalize }}{% endif -%}
{%- endblock %}


{% block component_intro %}
    <h1 >{{ name|capitalize }}</h1>
{% endblock %}


{% block component_list %}
   {% for component in examples[name] %}
        {{ ui.styleguide_component(component.styleguide_type, component, styleguide.outputs) }}
   {% endfor %}
{% endblock %}
