
{# macro colors(color_groups) %}
    {% if color_groups|default and color_groups|length %}
        {% for name, colors in color_groups %}
            {% set info = null %}
            {% if '__' in name %}
                {% set info = name|split('__', 2)|last %}
                {% set name = name|split('__', 2)|first %}
            {% endif %}
            <h3 >{{ name }}{% if info %} ({{ info|replace({'-': ' '}) }}){% endif %}</h3>
            <div class="demo-colors">
                {% for name, values in colors %}
                    {% set cx_loop = {
                        container: html_classes({
                            'demo-color-light': not(values.dark),
                            'demo-color-dark': values.dark
                        })
                    } %}

                    <div class="demo-color  {{ cx_loop.container }}">
                        <div class="demo-color-value" style="background-color: {{ values.color }};">
                            {{ values.color }}
                        </div>
                        <code class="demo-color__name">{{ name }}</code>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% endif %}
{% endmacro #}

{% macro graphics(img_list,rooturi) %}
    {% import 'macros/components.html.twig' as ui %}

    {% if img_list|default and img_list|length %}
        <div class="demo-images">
            {% for i in img_list %}
                {% if i|split('.')|last == "svg" %}
                    <div class="demo-image" style="background-color:#efefef; padding:1em">
                        {{ ui.svg(i, {
                            directory: rooturi ~ '/assets/images',
                            width: 240,
                            height: 240,
                        }) }}
                        <p class="demo-image-name">{{ i }}</p>
                    </div>
                {% else %}
                    <div class="demo-image"  style="background-color:#efefef; padding:1em">
                        <img src="/assets/images/{{i}}" style="max-width:128px">
                        <p class="demo-image-name">{{ i }}</p>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
{% endmacro %}

{% macro icons(icon_list,rooturi) %}
    {% import 'macros/components.html.twig' as ui %}

    {% if icon_list|default and icon_list|length %}
        <div class="demo-icons">
            {% for i in icon_list %}
                <div class="demo-icon">
                    {{ ui.svg(i, {
                        directory: rooturi ~ '/assets/images/icons',
                        width: 48,
                        height: 48,
                    }) }}
                    <p class="demo-icon-name">{{ i }}</p>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endmacro %}


