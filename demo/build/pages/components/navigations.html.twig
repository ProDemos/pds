{% extends 'styleguide/component.html.twig' %}
{% import 'macros/components.html.twig' as ui %}


{% block head_title 'Navigations - Styleguide' %}


{% block component_intro %}
   <h1 class="c-copy--h1">Navigations</h1>
   <p>
        Tab menus can be written using bullet lists or any other 
        type of element with the right classes. The tabs with content
        panels require javascript to work.
   </p>
   <div class="s-default">
        <h4>Elements and modifiers</h4>
        <ul>
            <li> .c-tabs-container</li>
            <li> .c-tabs-container > ( ul | ol | .c-tabs ) [ + .c-tabs-panels ]</li>
            <li> .c-tabs > ( li | .c-tabs-item ) > ( a | .c-tabs-link )[ .current ]</li>
            <li> .c-tabs-panels > .c-tabs-panel[ .current ]</li>
        </ul>
    </div>
{% endblock %}

{% block component_list %}
    {% for component in components.navigations %}
        {{ ui.styleguide_component(component.styleguide_type, component, styleguide.outputs) }}
    {% endfor %}
{% endblock %}
