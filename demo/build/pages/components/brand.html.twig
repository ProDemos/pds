{% extends 'styleguide/component.html.twig' %}
{% import 'macros/components.html.twig' as ui %}


{% block head_title 'Brand - Styleguide' %}


{% block component_intro %}
   <h1 class="c-copy--h1">Brand</h1>
{% endblock %}

{% block component_list %}
    {% for component in components.brand %}
        {% set logo = component.logo|merge({'directory': rooturi ~ 'assets/images/brand' }) %}
        {% set component = component|merge({'logo': logo }) %}
        {{ ui.styleguide_component(component.styleguide_type, component, styleguide.outputs) }}
    {% endfor %}
{% endblock %}
