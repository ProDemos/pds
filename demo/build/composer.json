{
    "require": {
        "twig/twig": "^3.0",
        "symfony/yaml": "^5.1",
        "twig/html-extra": "^3.0"
	},
	
    "scripts": {
    	"post-install-cmd": [
			"npm install"
		],
		"compile" : [
			"@compile-sass",
			"@compile-twig"
		],
		"compile-sass" : [
			"node_modules/node-sass/bin/node-sass --output-style compressed ../../assets/sass/main.scss ../../assets/css/main.css",
			"node_modules/node-sass/bin/node-sass --output-style compressed resources/sass/styleguide.scss ../html/css/styleguide.css",
			"node_modules/node-sass/bin/node-sass --output-style compressed resources/sass/prodemos.scss ../html/css/prodemos.css"
		],
		"compile-twig" : [
			"@php bin/compile-twig.php"
		]
    }
}
