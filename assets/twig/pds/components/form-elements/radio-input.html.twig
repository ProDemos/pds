
{% set cx = {
    container: html_classes({
        'full-width': full_width,
        't-corporate': theme == 'corporate',
        't-theme2': theme == 'theme2',
        't-theme3': theme == 'theme3',
        't-theme4': theme == 'theme4',
        't-theme5': theme == 'theme5',
        't-theme6': theme == 'theme6',
        't-theme7': theme == 'theme7',
    })
} %}
<div class="pds-c-input-container radio  has-hover-propagation  {{ cx.container }}">
    <label for="{{ id }}">
        <input class="pds-c-input" type="radio" id="{{ id }}" name="{{ name }}" value="{{ value }}" {% if checked %}checked="checked"{% endif %}>
        <div class="pds-c-input-check"></div>
        {{ label }}
    </label>
</div>
